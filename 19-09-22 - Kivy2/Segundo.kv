<TelaPrincipal>:
    cols: 1
    rows: 5

    canvas:
        Color:
            rgba: (.8,.92, .90, 1)

        Rectangle:
            pos: root.pos
            size: root.size

    RelativeLayout:
        CheckBox:
            id: chkFem
            group: 'sexo'
            pos_hint:{"left":1,"left":0.5}
            size_hint: [0.3, 0.35]
            color: 'black'
        Label:
            pos_hint:{"left":0.5,"left":0.5}
            size_hint: [0.3, 0.35]
            font_size: '14sp'
            color: [0,0,0,1]
            text: "Feminino"


        Label:
            pos_hint:{"left":1,"left":1}
            size_hint: [0.2, 0.25]
            font_size: '14sp'
            color: [0,0,0,1]
            text: "Masculino"
        CheckBox:
            id: chkMas
            group: 'sexo'
            pos_hint:{"left":1.5,"left":1}
            size_hint: [0.2, 0.25]
            color: 'black'

        Label:
            pos_hint:{"left":0,"left":1.5}
            size_hint: [0.1, 0.15]
            font_size: '14sp'
            color: [0,0,0,1]
            text: "Outros"
        CheckBox:
            id: chkOut
            group: 'sexo'
            pos_hint:{"left":0.8,"left":1.5}
            size_hint: [0.1, 0.15]
            color: 'black'


    GridLayout:
        cols: 8
        rows: 1

        canvas:
            Color:
                rgba: (.8, .8, .75, .7)
            Rectangle:
                pos: self.pos
                size: self.size

        CheckBox:
            id: chkGames
            color: 'black'
            #on_active:
            #    root.verificarEscolhas()

        Label:
            font_size: '14sp'
            color: 'black'
            text: 'Games'
            halign: 'left'
            valign: 'center'

        CheckBox:
            id: chkLer
            color: 'black'
            #on_active:
            #    root.verificarEscolhas()

        Label:
            font_size: '14sp'
            color: 'black'
            text: 'Ler'
            halign: 'left'
            valign: 'center'

        CheckBox:
            id: chkEsportes
            color: 'black'
            #on_active:
            #    root.verificarEscolhas()

        Label:
            font_size: '14sp'
            color: 'black'
            text: 'Esportes'
            halign: 'left'
            valign: 'center'

        CheckBox:
            id: chkDesenhar
            color: 'black'
            #on_active:
            #    root.verificarEscolhas()

        Label:
            font_size: '14sp'
            color: 'black'
            text: 'Desenhar'
            halign: 'left'
            valign: 'center'

    RelativeLayout:
        Button:
            id: brVer
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center':(.5, .5)}
            text: 'Verificar'
            on_press:
                root.verificarEscolhas()

    RelativeLayout:
        canvas:
            Color:
                rgba: (.3,.25, .52, .4)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Cor Preferida'
            color: 'black'
            pos_hint: {'center': (.5,.5)}

        Spinner:
            id: spCor
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center': (.5,.5)}
            text: 'Escolha'
            values: ('Azul', 'Vermelho', 'Verde', 'Preto', 'Cinza')
            on_text:
                root.escolhaSpinner()




