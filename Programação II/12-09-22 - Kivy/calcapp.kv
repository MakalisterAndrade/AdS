<Tela>:
    title: 'App Calc'
    auto_dismiss: False

    GridLayout:
        pos: self.pos
        size: root.size
        rows: 2
        cols: 2

        canvas:
            Color:
                rgba: (.87, .72, .97, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Digite o peso do material em gramas: '
            color: [0,0,0,0.8]


        TextInput:
            id: txt1
            hint_text: 'Peso em gramas '
            size_hint: 2, 0.03


        Button:
            text: '<Calcular>'
            size_hint: 0.3, 0.3
            on_press: root.calculo()

        Label:
            id: lbResult
            font_size: '24sp'
            color: 'red'

