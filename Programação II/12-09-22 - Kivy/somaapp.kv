<Tela1>:
    title: 'App Soma'
    auto_dismiss: False

    GridLayout:
        pos: self.pos
        size: root.size
        rows: 3
        cols: 2

        canvas:
            Color:
                rgba: (.87, .72, .97, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Num1:'
            color: [0,0,0,0.8]


        TextInput:
            id: txt1
            hint_text: 'Valor 1'
            size_hint: 2, 0.03

        Label:
            text: 'Num2:'
            color: [0,0,0,0.8]

        TextInput:
            id: txt2
            hint_text: 'Valor 2'
            size_hint: 2, 0.03

        BoxLayout:
            Button:
                text: 'Somar'
                size_hint: 0.5, 0.3
                on_press: root.somar()
                #pos_hint: {"top":.9, "top":.5}
                #pos_hint: {"center_x":.5, "center_y":.5}
                #pos_hint: {'center_x': 1, 'center_y': 1}
                #padding : 6,self.height/2 - self.font_size/2,6,6
                #valign: 'center'
                #halign: 'center'
                #pos_hint:{"center":(.5,.5)}

            Label:
                id: lbResult
                font_size: '24sp'
                color: 'red'

