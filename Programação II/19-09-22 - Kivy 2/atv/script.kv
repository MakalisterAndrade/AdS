<Tela>:

    #Vari√°veis Globais
    atual: leitAtu
    ant: leitAnt
    cons: consumo
    check: chkBaixa
    bt1: btnovo
    bt2: btcalc
    canvas:
        Color:
            rgba: (1, 1, 1, 1)

        Rectangle:
            pos: root.pos
            size: root.size


    GridLayout:
        pos: self.pos
        size: root.size
        rows: 5
        cols: 2
        row_force_default: True
        row_default_height: 50

        Label:
            size_hint: 2,None
            height: 40
            font_size: '14sp'
            color: [0,0,0,1]
            text: "Leitura anterior: "
        TextInput:
            hint_text: 'Kw/h'
            size_hint: None, None
            width: 200
            height: 30
            id: leitAnt
            multiline: False
        Label:
            size_hint: 0, None
            height: 30
            font_size: '14sp'
            color: [0,0,0,1]
            text: 'Leitura atual: '
        TextInput:
            hint_text: 'Kw/h'
            size_hint: None, None
            width: 200
            height: 30
            id: leitAtu
            multiline: False
        Label:
            size_hint: 0, None
            width: 30
            height: 30
            font_size: '14sp'
            color: [0,0,0,1]
            text: 'Consumo: '
        TextInput:
            readonly: True
            cursor_blink: False
            size_hint: None, None
            width: 200
            height: 30
            id: consumo
            multiline: False

        CheckBox:
            id: chkBaixa
            color: 'black'
            #on_active:
            #    root.verificarEscolhas()
            text: 'Baixa Renda'
        Label:
            font_size: '14sp'
            color: 'black'
            text: 'Baixa Renda'

        Button:
            color: 'white'
            background_color: 'blue'
            id: btcalc
            size_hint: None, None
            size: 80, 20
            text: 'Calcular'
            on_press:
                root.Calcular()

        Button:
            color: 'white'
            background_color: 'blue'
            id: btnovo
            size_hint: None, None
            size: 80, 20
            text: 'Novo'
            on_press:
                root.Novo()
