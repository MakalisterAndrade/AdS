<GerenciaTelas>:
    TelaInicial:
    CadastroParticipante:
    ListarParticipantes:
    CadastroAtividade:
    ListarAtividades:
<TelaInicial>
    name: 'TelaInicial'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        cancas:
            Rectangle:
                #source: 'logo.png'
                pos: root.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200
            size_hint_x: .5
            Label:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .7
                    Rectangle:
                        pos: self.pos
                        size: self.size

                text: 'Participantes'
                color: [0,0,0,.7]
                font_size: '18sp'
            Button:
                on_release: app.root.tela_cadastro_participante(self)
                text: 'Cadastrar'

            Button:
                on_release: app.root.tela_listar_participantes()
                text: 'Listar Participantes'
            Label:
                canvas.before:
                    Color:
                        rgba: 1,1,1,.7
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Participantes'
                font_size: '18sp'
                color: [0,0,0,.7]

            Button:
                on_release: app.root.tela_cadastro_participante()
                text: 'Cadastrar'

            Button:
                on_release: app.root.tela_listar_participantes()
                text: 'Listar Participantes'
#Termino da tela inical